{% extends 'base.html.twig' %}

{% block title %}Seriale{% endblock %}

{% block body %}
<div class="container">
    <ol class="breadcrumb p-0">
        <li class="breadcrumb-item"><a href="#">Strona główna</a></li>
        <li class="breadcrumb-item active"><a href="#">Seriale</a></li>
    </ol>
    <div class="d-flex flex-row justify-content-between">
        <h1>Seriale</h1>
        <div class="btn-group mb-3" role="group">
            {{ form_start(filter, { 'attr': {'class': 'd-flex flex-row justify-content-between'} }) }}
            {{ form_widget(filter.title) }}
            {{ form_widget(filter.save) }}
            {{ form_end(filter) }}
            {% if is_granted('ROLE_USER') %}
            <a href="/series/add" class="btn btn-primary btn-md mr-1"/>Dodaj</a>
            {% endif %}
        </div>
    </div>
    {% if series %}

    {{ include('/series/index_table.html.twig') }}

    {% else %}
    <div class="alert alert-dismissible alert-danger">
        <strong>Powinny tutaj być seriale.. hmm..</strong><br/>
        Próbowałeś może <a href="/series" class="alert-link">włączyć i wyłączyć</a>?
    </div>
    {% endif %}      
</div>
{% endblock %}