{% extends 'base.html.twig' %}

{% block title %}Posty{% endblock %}

{% block body %}
<div class="container">
    <ol class="breadcrumb p-0">
        <li class="breadcrumb-item"><a href="#">Strona główna</a></li>
        <li class="breadcrumb-item active"><a href="#">Posty</a></li>
    </ol>
    <div class="d-flex flex-row justify-content-between mb-3">
        <h1>Posty</h1>
        <div class="btn-group" role="group">
            {% if is_granted('ROLE_USER') %}
            <a href="/posts/add" class="btn btn-primary btn-md mr-1"/>Dodaj</a>
            {% endif %}
        </div>
    </div>
    {% if posts %}
        {% for post in posts %}
        <div class="mb-5">
            <h1>{{ post.title }}</h1>
            <p>{{ post.content|length > 300 ? post.content|slice(0, 300) ~ '...' : post.content }}</p>
            <div class="btn-group" role="group">
                <a href="/posts/show/{{ post.id }}" class="btn btn-primary btn-sm mr-1"/>Szczegóły</a>
                {% if is_granted('ROLE_USER') %}
                <!-- Wyświetl opcję związane z daną produkcją dostępne dla użytkownika -->
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                <!-- Wyświetl opcję związane z daną produkcją dostępne dla administratora -->
                <a href="/posts/edit/{{ post.id }}" class="btn btn-primary btn-sm mr-1"/>Edytuj</a>
                <a href="/posts/delete/{{ post.id }}" class="btn btn-danger btn-sm"  onclick="return confirm('Jesteś pewien?')"/>Usuń</a>
                {% endif %}
            </div>
        </div>
        {% endfor %}
    {% else %}
    <div class="alert alert-dismissible alert-danger">
        <strong>Powinny tutaj być posty.. hmm..</strong><br/>
        Próbowałeś może <a href="/posts" class="alert-link">włączyć i wyłączyć</a>?
    </div>
    {% endif %}       
</div>
{% endblock %}